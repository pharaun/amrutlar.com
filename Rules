#!/usr/bin/env ruby

# A few helpful tips about the Rules file:
#
# * The order of rules is important: for each item, only the first matching
#   rule is applied.
#
# * Item identifiers start and end with a slash (e.g. “/about/” for the file
#   “content/about.html”). To select all children, grandchildren, … of an
#   item, use the pattern “/about/*/”; “/about/*” will also select the parent,
#   because “*” matches zero or more characters.

# Preprocess
preprocess do
  # authors may unpublish items by setting meta attribute publish: false
  items.delete_if { |item| item[:publish] == false }
end

compile '/css/_*/' do
    filter :sass, :syntax => :scss
end

compile '/css/*/' do
    filter :sass, :syntax => :scss
    filter :relativize_paths, :type => :css
end

compile '/img/boston-skyline/' do
    filter :boston_skyline
end

compile '/img/*/' do
    nil # Copy the rest
end

compile '/blog/*/' do
    filter :erb
    filter :kramdown, :auto_ids => false
    filter :colorize_syntax
    layout 'blog'
    layout 'default'
end

compile '/blog/*/', :rep => :summary do
    filter :erb
    filter :kramdown, :auto_ids => false
    filter :colorize_syntax
    layout 'blog_summary'
end

compile '/projects/*/' do
    filter :erb
    filter :kramdown, :auto_ids => false
    filter :colorize_syntax
    layout 'project'
    layout 'default'
end

compile '/projects/*/', :rep => :summary do
    filter :erb
    filter :kramdown, :auto_ids => false
    filter :colorize_syntax
    layout 'project_summary'
end

compile '*' do
    filter :erb
    layout 'default'
end


route '/css/_*/' do
    # Don't output partials
    nil
end

route '/css/compass/*' do
    # Don't output compass framework
    nil
end

route '/css/*/' do
    item.identifier.chop + '.css'
end

route '/img/boston-skyline/' do
    '/img/boston-skyline.jpg'
end

route '/img/*/' do
    item.identifier.chop + '.' + item[:extension]
end

route '/blog/*/' do
    item.identifier + 'index.html'
end

route '/blog/*/', :rep => :summary  do
    # Don't output summary
    nil
end

route '/projects/*/' do
    item.identifier + 'index.html'
end

route '/projects/*/', :rep => :summary  do
    # Don't output summary
    nil
end

route '*' do
    item.identifier + 'index.html'
end


layout '*', :erb
